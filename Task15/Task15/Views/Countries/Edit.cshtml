
@model Country




<div class="row">
    <div class="col-12">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input class="form-control" asp-for="Name" aria-describedby="nameHelp">
                <div id="name" class="form-text">Please enter the name</div>
            </div>
            <div class="mb-3">
                <label asp-for="Code" class="form-label">Code</label>
                <input class="form-control" asp-for="Code" aria-describedby="codeHelp">
                <div id="code" class="form-text">Please enter the code</div>
            </div>
            <input asp-for="Id" hidden />
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>
</div>
