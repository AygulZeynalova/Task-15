@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Task15.Models.Entities.Country
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input class="form-control" asp-for="Name" aria-describedby="nameHelp">
            <div id="name" class="form-text">Please enter the name</div>
        </div>
        <div class="mb-3">
            <label asp-for="Code" class="form-label">Code</label>
            <input class="form-control" asp-for="Code" aria-describedby="codeHelp">
            <div id="code" class="form-text">Please enter the code</div>
        </div>
       
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</body>
</html>
